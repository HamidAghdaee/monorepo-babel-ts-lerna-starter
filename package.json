{
  "name": "monorepo-ts-babel-lerna",
  "version": "0.0.0",
  "workspaces": [
    "packages/*"
  ],
  "description": "Test monorepo with ts and lerna",
  "scripts": {
    "prebuild": "tsc",
    "build": "lerna exec --parallel 'babel src --out-dir dist --source-maps --copy-files --extensions .ts,.tsx --delete-dir-on-start --no-comments'",
    "lint": "run-p -c lint:*",
    "lint:ts": "tslint 'packages/**/*.ts{,x}'",
    "lint:css": "stylelint 'packages/**/*.ts{,x}'",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "test"
  },
  "author": "Serhii Havrylenko",
  "license": "ISC",
  "private": true,
  "resolves": {
    "babel-core": "^7.0.0-bridge.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.1",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.0.0",
    "@types/react": "^16.4.6",
    "babel-bridge": "^1.12.11",
    "babel-core": "7.0.0-bridge.0",
    "lerna": "^3.4.0",
    "npm-run-all": "^4.1.3",
    "react": "^16.4.1",
    "styled-components": "^3.4.6",
    "stylelint": "^9.5.0",
    "stylelint-config-recommended": "^2.1.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.3.2",
    "tslint": "^5.11.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.0.3"
  }
